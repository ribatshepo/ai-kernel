{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch AiKernel.Core",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Core/bin/Debug/net8.0/AiKernel.Core.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Core",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch AiKernel.Core (Production)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Core/bin/Release/net8.0/AiKernel.Core.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Core",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Production"
            }
        },
        {
            "name": "Docker: Launch AiKernel",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-build",
            "netCore": {
                "appProject": "${workspaceFolder}/src/Core/AiKernel.Core.csproj"
            }
        },
        {
            "name": "Attach to Docker Container",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "aikernel-core"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}",
                "quoteArgs": false
            }
        }
    ]
}