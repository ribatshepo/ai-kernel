{
  "EventBus": {
    "Kafka": {
      "BootstrapServers": "localhost:9092",
      "SecurityProtocol": null,
      "SaslMechanism": null,
      "SaslUsername": null,
      "SaslPassword": null,
      "EnableSslCertificateVerification": true,
      "SslCaLocation": null,
      "ConnectionsMaxIdleMs": 540000,
      "MetadataMaxAgeMs": 900000,
      "SocketTimeoutMs": 60000,
      "RequestTimeoutMs": 30000
    },
    "SchemaRegistry": {
      "Url": "http://localhost:8081",
      "BasicAuthUserInfo": null,
      "RequestTimeoutMs": 30000,
      "MaxCachedSchemas": 1000,
      "AutoRegisterSchemas": true
    },
    "Producer": {
      "ClientId": "aikernel-producer",
      "Acks": "all",
      "Retries": 3,
      "RetryBackoffMs": 100,
      "LingerMs": 10,
      "BatchSize": 16384,
      "CompressionType": "snappy",
      "MaxInFlight": 5,
      "EnableIdempotence": true,
      "MessageTimeoutMs": 300000,
      "MessageMaxBytes": 1048576
    },
    "Consumer": {
      "ClientId": "aikernel-consumer",
      "GroupId": "aikernel-consumer-group",
      "AutoOffsetReset": "earliest",
      "EnableAutoCommit": false,
      "AutoCommitIntervalMs": 5000,
      "SessionTimeoutMs": 45000,
      "HeartbeatIntervalMs": 3000,
      "MaxPollIntervalMs": 300000,
      "MaxPollRecords": 500,
      "FetchMinBytes": 1,
      "FetchMaxWaitMs": 500,
      "MaxPartitionFetchBytes": 1048576
    },
    "DeadLetterQueue": {
      "TopicSuffix": ".dlq",
      "MaxRetries": 5,
      "InitialRetryDelayMs": 1000,
      "RetryBackoffMultiplier": 2.0,
      "MaxRetryDelayMs": 60000,
      "EnableDlq": true
    },
    "Metrics": {
      "Enabled": true,
      "PublishIntervalSeconds": 60,
      "EnableDetailedMetrics": true,
      "MetricsPrefix": "aikernel_eventbus"
    }
  }
}
